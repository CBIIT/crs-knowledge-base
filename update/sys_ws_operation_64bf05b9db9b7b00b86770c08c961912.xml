        <name>submit2DOC</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

    var sub_id = request.body.data.sub_id;
	
	var gr = new GlideRecord('x_26385_crs_kd_submissions');
	gr.addQuery('sys_id',sub_id);
	gr.query();
	gr.next();
	gr.submission_approval_action = 'approved';
	var other_info = JSON.parse(gr.submission_other_info.toString());
	if(other_info.rejectedByDOC){
		//was rejected by DOC, need to send a notification
		var email = gr.submission_doc_reviewer.email;
		gs.eventQueue('x_26385_crs_kd.resubmit2DOC',gr, "", email);
	}
	other_info.rejectedByDOC = 0;
	gr.submission_other_info = JSON.stringify(other_info);
	gr.update();
	
	return 1;

})(request, response);]]></operation_script>
