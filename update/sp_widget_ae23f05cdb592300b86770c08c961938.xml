        <client_script><![CDATA[function($scope,$location, NERDSearchBasicArticleByID) {
  /* widget controller */
  var c = this;
	var s = $location.search();
	var template = {"u_kb_template_top_accomplishment":['Cancer Site/Type','Research Type','Description','References','Involved organization', 'DOC', 'Fiscal Year']
				   };
	
	var sessionId = c.data.info.sessionId;
	var data = {};
	var columns = [];
	var title = "";
	var params = {};
	params.doc_id = s.aid;
	params.template_id = s.tid;
	
	NERDSearchBasicArticleByID.getArticle(params, sessionId).then(function(res){
		$scope.data = res.data.result;
		$scope.title = $scope.data['Short description'];
		$scope.columns = template[params.template_id];
		$scope.tags = [{text: 'Brain Cancer'},
									 {text: 'Clinical'},
									 {text: 'Tumors'}];
	}, function(error){
		console.log(error);
	});
}]]></client_script>
